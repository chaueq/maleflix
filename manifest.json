{
  "manifest_version": 3,
  "name": "Maleflix",
  "version": "1.0.0",

  "description": "Get rid of Netflix feminist propaganda",

  "permissions": [
    "storage"
  ],

  "action": {
    "default_popup": "popup/index.html"
  },

  "icons": {
    "64": "media/icon_64.png",
    "128": "media/icon_128.png"
  },

  "content_scripts": [{
    "matches": ["https://www.netflix.com/*", "https://netflix.com/*"],
    "js": [
      "lib/index.js",
      "lib/data.js",
      "lib/removeTitle.js",
      "lib/blocklist.js",
      "lib/updateLists.js",

      "main.js"
    ]
  }]
}
